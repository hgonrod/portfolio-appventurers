---
import SiteLayout from "../layouts/SiteLayout.astro";
---


<SiteLayout title="Contacto">
  <div class="container col-xxl-8 px-4 py-5 formulario-contacto">
    <h1 class="titulo"> FORMULARIO DE CONTACTO </h1>
    <form class="w-full max-w-sm">
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label for="nome">
              Nome
            </label>
          </div>
          <div class="md:w-2/3">
            <input id="nome" placeholder="Nome..." required>
          </div>
        </div>
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label for="email">
              E-Mail
            </label>
          </div>
          <div class="md:w-2/3">
            <input type="email" id="email" placeholder="exemplo@exemplo.net" required>
          </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
              <label for="comentario">
                Comentario
              </label>
            </div>
            <div class="md:w-2/3">
              <textarea id="comentario" placeholder="Escriba aquÃ­ o seu comentario..." required/>
            </div>
          </div>
        <div class="md:flex md:items-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3">
            <input type="submit" value="Enviar">
          </div>
        </div>
      </form>
  </div>
  <style>
    .titulo {
      font-size: x-large;
    }
    
    .container {
      width: 40rem;
    }
    

    form {
        border: 2px solid;
        border-radius: 10px;
        margin: auto;
        width: 50%;
        padding: 10px;
        background-color: whitesmoke;
    }

    h1 {
        text-align: center;
    }

    input, textarea {
      width: 100%;
      border-radius: 5px;
      background-color:white;
    }

    input:focus, textarea:focus {
      outline: none !important;
      border:2px solid #719ECE;
      box-shadow: 0 0 10px #719ECE;
    }

    textarea {
      height: 9rem;
    }

    form > div {
      padding-bottom: 10px;
    }
    div > input[type=submit] {
      width: 100%;
    }

    </style>
</SiteLayout>