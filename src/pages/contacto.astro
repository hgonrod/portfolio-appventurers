---
import SiteLayout from "../layouts/SiteLayout.astro";
---


<SiteLayout title="Contacto">
  <div class="container col-xxl-8 px-4 py-5 formulario-contacto">
    <h1 class="titulo"> FORMULARIO DE CONTACTO </h1>
    <form class="w-full max-w-sm">
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label for="nome">
              Nome
            </label>
          </div>
          <div class="md:w-2/3">
            <!-- <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-full-name" type="text" placeholder="Insira nome" required> -->
            <input id="nome" placeholder="Nome..." required>
          </div>
        </div>
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <!-- <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="inline-email"> -->
            <label for="email">
              E-Mail
            </label>
          </div>
          <div class="md:w-2/3">
            <!-- <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="inline-email" type="email" placeholder="nome@direccion.com" required> -->
            <input type="email" id="email" placeholder="exemplo@exemplo.net" required>
          </div>
        </div>
        <div class="md:flex md:items-center mb-6">
            <div class="md:w-1/3">
              <!-- <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="comentario">  -->
              <label for="comentario">
                Comentario
              </label>
            </div>
            <div class="md:w-2/3">
              <!-- <textarea class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="comentario" required/> -->
              <textarea id="comentario" placeholder="Escriba aquÃ­ o seu comentario..." required/>
            </div>
          </div>
        <!--
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3"></div>
          <label class="md:w-2/3 block text-gray-500 font-bold">
            <input class="mr-2 leading-tight" type="checkbox">
            <span class="text-sm">
              Send me your newsletter!
            </span>
          </label>
        </div>
         -->
        <div class="md:flex md:items-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3">
            <!--<input class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded boton-enviar" type="submit" value="Enviar"/>-->
            <!-- <input class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none font-bold py-2 px-4 rounded boton-enviar" type="submit" value="Enviar"/>  -->
            <input type="submit" value="Enviar">
          </div>
        </div>
      </form>
  </div>
  <style>
    /*.container:hover {
      color:red
    }*/
    /*.container{
      background-color: red;
    }*/
    .titulo {
      font-size: x-large;
    }
    
    .container {
      /* background-color:red; */
      width: 40rem;
    }
    

    form {
        border: 2px solid;
        border-radius: 10px;
        margin: auto;
        width: 50%;
        padding: 10px;
        background-color: whitesmoke;
    }

    h1 {
        text-align: center;
    }

    input, textarea {
      width: 100%;
      border-radius: 5px;
      background-color:white;
    }

    

    input:focus, textarea:focus {
      outline: none !important;
      border:2px solid #719ECE;
      box-shadow: 0 0 10px #719ECE;
    }

    /*
    input[type=submit]:focus {
      border: 2px solid black;
      box-shadow: 0 0 0px black;
    }
    */

    textarea {
      height: 9rem;
    }

    form > div {
      padding-bottom: 10px;
    }
    div > input[type=submit] {
      width: 100%;
    }

    /*
    div > input[type=submit]:hover {
      background-color:whitesmoke;
    }
    */
    </style>
</SiteLayout>